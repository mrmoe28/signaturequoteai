# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Database Configuration (NeonDB)
DATABASE_URL=postgresql://username:password@host.neon.tech/database?sslmode=require&channel_binding=require

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
AUTH_SECRET=your-nextauth-secret-change-this-in-production
NEXTAUTH_URL=http://localhost:3000

# Google OAuth (Add your credentials)
AUTH_GOOGLE_CLIENT_ID=
AUTH_GOOGLE_CLIENT_SECRET=

# Email Configuration (for password resets and quote emails)
# Get Gmail App Password from: https://myaccount.google.com/apppasswords
EMAIL_FROM=your-gmail@gmail.com
EMAIL_PASSWORD=your-gmail-app-password
GOOGLE_CLIENT_EMAIL=your-gmail@gmail.com
GOOGLE_APP_PASSWORD=your-gmail-app-password

# Crawler Configuration
CRAWLER_DELAY_MS=1000
CRAWLER_MAX_RETRIES=3
CRAWLER_TIMEOUT_MS=30000

# API Configuration
API_RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=info

# Vercel Configuration (for cron jobs)
VERCEL_CRON_SECRET=your-vercel-cron-secret

# Square Configuration
# For testing use: sandbox
# For production use: production
SQUARE_ENVIRONMENT=sandbox
SQUARE_APPLICATION_ID=your_square_app_id
SQUARE_ACCESS_TOKEN=your_square_access_token
SQUARE_LOCATION_ID=your_square_location_id
SQUARE_WEBHOOK_SIGNATURE_KEY=your_webhook_signature_key

# Support Email (shown in Square checkout)
SUPPORT_EMAIL=your-support-email@gmail.com

# OpenAI API Configuration (for MCP auto-debugging)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
