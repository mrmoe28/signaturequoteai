{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "crons": [
    {
      "path": "/api/crawl",
      "schedule": "0 2 * * *"
    }
  ],
  "functions": {
    "app/api/crawl/route.ts": {
      "maxDuration": 300
    },
    "app/api/quotes/[id]/pdf/route.ts": {
      "maxDuration": 60,
      "memory": 1024
    },
    "app/api/quotes/[id]/send/route.ts": {
      "maxDuration": 30
    }
  },
  "build": {
    "env": {
      "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "true"
    }
  }
}
